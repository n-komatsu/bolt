.l-header
  padding: 15px 0;
  position: fixed;
  width: 100%;
  top: 0;
  left: 0;
  background: #fff;
  z-index: 10;
  .inner
    max-width: 1100px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    .bolt
      font-family: 'FontAwesome';
      font-size: 60px;
      color: bolt-icon
    .contact
      color: #fff;
      background: cv-color;
      font-size: 12px;
      padding: 15px;
      text-decoration: none;
      transition: all .3s;
      display: block;
      &:hover
        color: text-color;
    .sp-menu
      display: none;
@media screen and (min-width 768px) and (max-width 1100px)
  .l-header
    .inner
      width: 97%;
      margin: 0 auto;
@media screen and (max-width 767px)
  .l-header
    .inner
      width: 97%;
      margin: 0 auto;
      align-items: center;
      .contact
        display: none;
      .sp-menu
        display: block;
        width: 40px;
        height: 34px;
        padding: 10px;
        border-radius: 4px;
        border 1px solid #ddd;
        position: relative;
        .line
          height: 2px;
          background: #ddd;
          display: block;
          width: 20px;
          position: absolute;
          transition: all .3s;
          &:first-child
            transform: translateY(6px) rotate(-45deg);
          &:nth-child(2)
            top: 14px;
            left: 10px;
            opacity: 0;
          &:last-child
            transform: translateY(6px) rotate(45deg);
        &.is-close
          .line
            &:first-child
              top: 10px;
              left: 10px;
              transform: none;
            &:nth-child(2)
              top: 14px;
              left: 10px;
              opacity 1;
            &:last-child
              top: 18px;
              left: 10px;
              transform: none;

              