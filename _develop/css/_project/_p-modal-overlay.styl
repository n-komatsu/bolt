.p-modal-overlay
  .overlay
    position: fixed;
    width: 100%;
    height: 120%;
    background: rgba(0, 0, 0, .7);
    transition: all .5s;
    top: 0;
    left: 0;
    opacity 1;
    z-index: 20;
  &.is-close
    .overlay
      pointer-events: none;
      opacity 0;
  .content
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 30;
    .txt
      margin-top: 20px;
      text-align: center;
      a
        font-size: 30px;
        color: #fff;
        text-align: center;
        text-decoration: none;
  &.is-close
    .content
      opacity 0;
      pointer-events: none;