.p-skills
  background: bg-darkgray;
  padding: 70px 0 100px;
  .title
    font-size: 24px;
    color: #fff;
    text-align: center;
    margin-bottom: 50px;
  .skills
    display: flex
    justify-content: space-between;
    li
      width: calc(25% - 90px);
      figure
        text-align: center;
        img
          display: inline-block;
          margin-bottom: 10px;
        figcaption
          font-size: 16px;
          color: #fff;
          text-align: center;
@media screen and (min-width 768px) and (max-width 1100px)
  .p-skills
    .skills
      display: block;
      li
        width: 100%;
        text-align: center;
        margin: 0 auto 88px;
        &:last-child
          margin-bottom: 0;
@media screen and (max-width 767px)
  .p-skills
    .skills
      display: block;
      li
        width: 100%;
        text-align: center;
        margin: 0 auto 88px;
        &:last-child
          margin-bottom: 0;